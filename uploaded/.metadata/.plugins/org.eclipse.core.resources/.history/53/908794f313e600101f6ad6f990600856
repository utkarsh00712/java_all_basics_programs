package com.kodnest.SeventhSpring;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;

@Component
public class Employee {
int id;
String name;
int salary;
Department dept;
public Employee(int id, String name, int salary, Department dept) {
	super();
	this.id = id;
	this.name = name;
	this.salary = salary;
	this.dept = dept;
}
public Employee() {
	super();
}
public int getId() {
	return id;
}
@Autowired
public void setId(@Value("${employee.id}") int id) {
	this.id = id;
}
public String getName() {
	return name;
}
@Autowired
public void setName(@Value("${employee.name}")String name) {
	this.name = name;
}
public int getSalary() {
	return salary;
}
@Autowired
public void setSalary(@Value("${employee.salary}")int salary) {
	this.salary = salary;
}
public Department getDept() {
	return dept;
}
@Autowired
public void setDept(Department dept) {
	this.dept = dept;
}
@Override
public String toString() {
	return "Employee [id=" + id + ", name=" + name + ", salary=" + salary + ", dept=" + dept + "]";
}

}
